{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 3,
  "name": "Infinity Pegasus",
  "version": "1.0.1",
  "description": "Make Pegasus great again!",
  "homepage_url": "https://github.com/Litarvan/infinity-pegasus",
  "icons": {
    "128": "icon_128.png"
  },
  "action": {
    "default_title": "Infinity Pegasus",
    "default_icon": {
      "48": "enabled_48.png",
      "128": "enabled_128.png"
    }
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://prepa-epita.helvetius.net/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [{
    "matches": ["*://prepa-epita.helvetius.net/*"],
    "js": ["content.js"]
  }]
}
